# Site settings
title: "{{BOOK_TITLE}}"
description: "{{BOOK_DESCRIPTION}}"
author: {{AUTHOR_NAME}}
baseurl: "/{{REPO_NAME}}"
url: "https://{{GITHUB_USERNAME}}.github.io"

# Build settings
markdown: kramdown
theme: minima

# Disable header navigation completely - empty array means show nothing
header_pages: []

# Kramdown settings
kramdown:
  input: GFM
  syntax_highlighter: rouge
  hard_wrap: false

# Include/Exclude files
exclude:
  - brainstorms
  - .claude
  - scripts
  - README.md
  - CLAUDE.md
  - PROJECT.md
  - CONTRIBUTING.md
  - SDK_FEATURES.md
  - PUBLISHING.md
  - BOOK_SUMMARY.md
  - TOC.md
  - book.config.json
  - style-guide.md
  - outlines
  - _templates

# Defaults
defaults:
  - scope:
      path: "chapters"
    values:
      layout: "chapter"
  - scope:
      path: ""
    values:
      layout: "default"
